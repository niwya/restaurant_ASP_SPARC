#const n=2.

sorts
#customer = {c1}.
#step = 0..n.
#obs_fluent = bill_wave(#customer(Cu)).
#fluent = #obs_fluent.
#boolean = {true, false}.

predicates
%% Actions and observations
obs(#fluent, #boolean, #step).
holds(#fluent, #step).

rules
%% General Inertia Axiom

holds(F,I+1) :- #fluent(F),
                holds(F,I),
                not -holds(F,I+1).

-holds(F,I+1) :- #fluent(F),
                 -holds(F,I),
                 not holds(F,I+1).

%% A fluent not known to be true is false 
-holds(F,I):- not holds(F,I).

%% Reality Check:
:- obs(F,true,I), -holds(F,I).
:- obs(F,false,I), holds(F,I).

%% Full Awareness Axiom:
holds(F,0) | -holds(F,0) :- #fluent(F).

%% History 
%obs(bill_wave(c1), false, 0).
obs(bill_wave(c1), true, 1).